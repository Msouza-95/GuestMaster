{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@module/*": ["module/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/shared/infra/typeorm/baseEntities/base.entity"], // Inclui todos os arquivos TypeScript no diret√≥rio src
  "exclude": ["node_modules"] // Exclui a pasta node_modules
}
